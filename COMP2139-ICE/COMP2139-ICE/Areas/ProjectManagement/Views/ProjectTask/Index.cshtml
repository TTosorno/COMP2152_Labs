@model IEnumerable<COMP2139_ICE.Areas.ProjectManagement.Models.ProjectTask>

@{
    ViewData["Title"] = "Tasks List";
}

<h1>Tasks List</h1>

<p>
    <a asp-action="Create" asp-route-projectId="@ViewBag.ProjectId" class="btn btn-primary">Create New Task</a>
    <a asp-controller="Projects" asp-action="Index" class="btn btn-secondary">Back to Projects</a>
</p>

@if (ViewData["SearchPerformed"] as bool? == true && !Model.Any())
{
    <div class="alert alert-info">
        No tasks found matching "<strong>@ViewData["CurrentFilter"]</strong>"
    </div>
}

<table class="table">
    <thead>
    <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Title, "ProjectTaskTitle")</td>
            <td>@item.Description</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProjectTaskId" class="btn btn-warning btn-sm">Edit</a>
                <a asp-action="Details" asp-route-id="@item.ProjectTaskId" class="btn btn-info btn-sm">Details</a>
                <a asp-action="Delete" asp-route-id="@item.ProjectTaskId" class="btn btn-danger btn-sm">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>